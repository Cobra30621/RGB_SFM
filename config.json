{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    "description": "",
    "tags": ["SFMCNN_v10", "Rewrite"],
    "group" : "Rewrite",

    "arch": {
        "type": "SFMCNN",
        "args": {
            "in_channels": 1,
            "out_channels": 10,
            "Conv2d_kernel": [[5, 5], [1, 1], [1, 1], [1, 1]],
            "channels": [1, 100, 225, 625, 1225],
            "SFM_filters": [[2, 2], [1, 3], [3, 1]],
            "strides": [4, 1, 1, 1],
            "w_arr": [4.0, 4.0, 4.0, 4.0],
            "bais_arr": [0.4, 0.1, 0.01, 0.01]
        }
    },

    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/MNIST",
            "input_size": [28, 28],
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "loss": "CrossEntropyLoss",

    "metrics": [
        "accuracy"
    ],

    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 10
        }
    },

    "trainer": {
        "epochs": 200,

        "save_dir": "./runs/train/exp",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "off",
        "early_stop": -1
    }

}